<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3E1685"/>
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- Rectangle Layer -->
    <item android:top="-3dp" android:right="6dp" android:left="0dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="#4A0388"
                android:endColor="#6063FD"
                android:angle="40"/>
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>