<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="@drawable/back_btn"
            app:title="Setting"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/tempLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:paddingStart="50dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/tempTv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Temperature:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/temp"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/tempTv"
            android:ems="10"
            android:inputType="numberDecimal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/humidLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tempLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingStart="50dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/humidityTv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Humidity:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/humid"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/humidityTv"
            android:ems="10"
            android:inputType="numberDecimal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aqiLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/humidLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingStart="50dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/aqiTv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="AQI:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/aqi"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/aqiTv"
            android:ems="10"
            android:inputType="numberDecimal" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Notification settings"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aqiLayout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Unit"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/menu"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:hint="Select unit options">

        <AutoCompleteTextView
            android:id="@+id/attributeMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Save" />


</RelativeLayout>